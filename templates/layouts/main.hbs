<section id='templates'>

  <script type='text/template' id='template-featured'>
    <div class='row'>
      <div class='large-8 large-push-4 medium-7 medium-push-5 columns small-bleed'>
        <a href='/portfolio/<%= id %>'><img src='portfolio/thumbnails/thumb-<%= id %>.png' width='100%' alt=''></a>
      </div>
      <div class='large-4 large-pull-8 medium-5 medium-pull-7 columns'>
        <h4><%= name %></h4>
        <p class='text'>
          <%= feature_description %>
        </p>
        <% if (typeof role !== 'undefined') { %>
        <p class='info'>
          <span>My roles.</span>
          <%= role %>
        </p>
        <% } %>
        <% if (typeof ext_url !== 'undefined') { %>
        <p class='info'>
          <span>Website.</span>
          <a href='<%= ext_url %>' target='_blank'><%= ext_url %></a>
        </p>
        <% } %>
      </div>
    </div>
  </script>

  <script type='text/template' id='template-portfolio-grid-item'>
    <li class='portfolio-grid-item' data-project-type='<%= type %>'>
      <a href='/portfolio/<%= id %>'>
        <img src='portfolio/thumbnails/<% if (typeof thumbnail !== 'undefined') { print(thumbnail) } else { print('thumb-' + id + '.jpg') } %>'>
        <div class='portfolio-name'>
          <div class='caption'>
            <% if (typeof menu_name !== 'undefined') { print(menu_name) } else { print(name) } %>
            <% if (typeof location !== 'undefined' && location !== window.location) { %>
            <br>
            <span class='subtitle'><%= location %></span>
            <% } %>
          </div>
        </div>
      </a>
    </li>
  </script>

</section>

